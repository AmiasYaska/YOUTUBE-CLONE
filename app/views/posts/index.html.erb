<div class="w-full px-8 py-20 ">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Posts" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">All videos</h1>
    <%= link_to "Upload video", new_post_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div class="grid grid-cols-4">
    <div id="posts" class="min-w-full">
      <% @posts.each do |post| %>
        <%= render post %>
        
      <% end %>
    </div>
  </div>

</div>
