<%= link_to post do %>
  <div id="<%= dom_id post %>">

    <%= image_tag post.video.preview(resize_to_limit: [250, 250]).processed.url %>

    <p class="my-3">
      <strong class="block font-medium mb-1"></strong>
      <%= post.title %>
    </p>

    <p class="my-3">
      Posted by <%= post.user.email %>
    </p>

     <p class="my-3">
      Views <%= post.views_count %>
    </p>

    <p class="my-3">
      Likes <%= post.likes.count %>
    </p>

    <br/>


  </div>
<% end %>

